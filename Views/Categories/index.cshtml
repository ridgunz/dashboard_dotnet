@model List<Categories>

<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title">Categories</h3>
            <div class="mb-3">
               <a asp-action="Create" class="btn btn-primary">Add Categories</a>
            </div>
            <div class="table-responsive">
                <table class="table text-nowrap">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var categories = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@categories.CategoryName</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-warning" style="margin-right: 8px;" asp-action="Edit" asp-route-id="@categories.Id">Edit</a>
                                            <form asp-action="DeleteConfirmed" asp-route-id="@categories.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this categories?')">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">No categories available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
