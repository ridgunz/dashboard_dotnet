@model List<Products>

 <div class="page-breadcrumb bg-white">
    <div class="row align-items-center">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Landing Page</h4>
        </div>
    </div>
</div>
<br>
<div class="container-fluid">
    <div class="row">
    @if (Model != null)
    {
        foreach (var product in Model)
        {
         <div class="col-md-3 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="card-img-container">
                            <img src="@product.Image" class="card-img-top mx-auto d-block" alt="Product Image">
                        </div>
                        <h5 class="card-title mt-3">
                            @product.Name
                        </h5>
                        <p class="card-text">
                            @product.Description
                        </p>
                        <p class="card-text"><strong>Category:</strong> @product.Category?.CategoryName</p>
                        <p class="card-text"><strong>Price:</strong> Rp. @string.Format("{0:N0}", product.Price)</p>
                    </div>
                </div>
            </div>
        }
    }else
{
    <p>No products available.</p>
}
    </div>
</div>






